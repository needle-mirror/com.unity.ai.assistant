.mui-chat-root {
    border-radius: 4px;
    flex-grow: 0;
    flex-shrink: 1;
}

.mui-chat-avatar {
    border-radius: 4px;
    height: 16px;
    width: 16px;
}

.mui-chat-avatar-frame {
    width: 24px;
    height: 24px;
    display: flex;
    margin-right: 4px;
    border-radius: 4px;
    background-color: var(--muse-chat-backgrounds-150);
    justify-content: center;
    align-items: center;
}

.mui-chat-username {
    -unity-font-style: bold;
    height: 20px;
}

.mui-chat-element-text-area {
    margin-top: 0;
}

.mui-um-edit-mode-active .mui-chat-element-text-area {
    margin-top: 0;
}

.mui-chat-element-avatar-area {
    flex-direction: row;
    align-items: center;
    margin-bottom: 12px;
}

.mui-chat-message-content {
    min-width: 100px;
    flex-direction: column;
}

.mui-chat-footer {
    border-top-width: 2px;
    border-top-color: var(--muse-chat-backgrounds-50);
    padding: 4px 4px 0 4px;
    flex-direction: row;
    margin-top: 0;
}

.mui-chat-attribution-text {
    height: 16px;
    margin-top: 12px;
    margin-bottom: 8px;
    color: var(--muse-chat-text-secondary-on-background-50)
}
